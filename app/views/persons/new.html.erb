<h1>New User</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@new_user, url: "/new_user") do |f| %>
      <div>
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>

      <div>
        <%= f.label :password %>
        <%= f.text_field :password %>
      </div>

      <div>
        <%= f.label :username %>
        <%= f.text_field :username %>
      </div>

      <div class="row">
      <div class="span">
        <%= f.label :admin %>
      </div>
      <div class="span">
        <%= f.check_box :admin %>
      </div>
      </div>

      <div>
        <br>
        <%= f.submit "Create new user", class: "btn btn-large btn-primary" %>
      </div>    
    <% end %>
  </div>
</div>